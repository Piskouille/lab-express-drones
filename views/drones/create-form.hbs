<h2>Create a new drone</h2>

<form action="/drones/create" method="POST" class="create-drone-form">
    <div class="form-field">
        <label for="name">Drone Name</label>
        <input type="text" name="name" id="name" placeholder="RCPX-780" required="true">
    </div>
    <div class="form-field">
        <label for="propellers">Number of Propellers</label>
        <input type="number" name="propellers" id="propellers" max="16" min="0" placeholder="4" required="true">
    </div>
    <div class="form-field">
        <label for="maxSpeed">Max Speed</label>
        <input type="number" name="maxSpeed" id="maxSpeed" min="0" step="10" placeholder="80">
    </div>

    <button class="btn" type="submit">Submit</button>
</form>