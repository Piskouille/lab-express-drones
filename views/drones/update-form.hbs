<h2>Update the drone</h2>

<form action="/drones/{{drone._id}}/edit" method="POST" class="create-drone-form">
    <div class="form-field">
        <label for="name">Drone Name</label>
        <input type="text" name="name" id="name" value="{{drone.name}}" required="true">
    </div>
    <div class="form-field">
        <label for="propellers">Number of Propellers</label>
        <input type="number" name="propellers" id="propellers" max="16" min="0" value="{{drone.propellers}}"  required="true">
    </div>
    <div class="form-field">
        <label for="maxSpeed">Max Speed</label>
        <input type="number" name="maxSpeed" id="maxSpeed" min="0" step="10" value="{{drone.maxSpeed}}" >
    </div>

    <button class="btn" type="submit">Submit</button>
</form>